{
    "name": "Homer",
    "id": "homer",
    "packaging_format": 1,
    "description": {
        "en": "Simple static homepage for your server",
        "fr": "Page d'accueil simpliste pour votre serveur"
    },
    "version": "21.09.2~ynh1",
    "url": "https://github.com/bastienwirtz/homer",
    "upstream": {
        "license": "MIT",
        "demo": "https://homer-demo.netlify.app/",
        "admindoc": "https://github.com/bastienwirtz/homer/blob/main/docs/configuration.md",
        "userdoc": "https://github.com/bastienwirtz/homer/blob/main/docs/configuration.md",
        "code": "https://github.com/bastienwirtz/homer"
    },
    "license": "GPL-3.0",
    "maintainer": {
        "name": "Salamandar",
        "email": "felix@piedallu.me"
    },
    "requirements": {
        "yunohost": ">= 11.2"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/homer",
                "default": "/homer"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": false
            }
        ]
    }
}
